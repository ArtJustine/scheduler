rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to write to the waitlist collection (for signup form)
    // But only allow reads for authenticated users
    match /waitlist/{document} {
      allow create: if true; // Anyone can add to waitlist
      allow read: if request.auth != null; // Only authenticated users can read
      allow update, delete: if false; // No updates or deletes from client
    }
    
    // Blog posts and categories - Publicly readable, but only admins can write
    match /blog_posts/{document} {
      allow read: if true;
      allow write: if request.auth != null; // In production, refine this to admin only
    }
    
    match /blog_categories/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Protect all other collections - require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
